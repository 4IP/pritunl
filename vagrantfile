# -*- mode: ruby -*-
# vi: set ft=ruby :

VAGRANTFILE_API_VERSION = "2"

Vagrant.configure(VAGRANTFILE_API_VERSION) do |config|
  config.vm.define "node0" do |node0|
    node0.vm.box = "ubuntu/trusty64"

    node0.vm.provision :shell, :path => "tools/vagrant_provision.sh"

    node0.vm.network "private_network", ip: "192.168.178.100"
    node0.vm.network :forwarded_port, guest: 9700, host: 9700,
      auto_correct: true
    node0.vm.network :forwarded_port, guest: 9900, host: 9900,
      auto_correct: true, protocol: "udp"

    node0.vm.provider :virtualbox do |virt|
      virt.customize ["modifyvm", :id, "--nicpromisc2", "allow-all"]
    end
  end

  config.vm.define "node1" do |node1|
    node1.vm.box = "ubuntu/trusty64"

    node1.vm.provision :shell, :path => "tools/vagrant_provision.sh"

    node1.vm.network "private_network", ip: "192.168.178.101"
    node1.vm.network :forwarded_port, guest: 9700, host: 9701,
      auto_correct: true
    node1.vm.network :forwarded_port, guest: 9901, host: 9901,
      auto_correct: true, protocol: "udp"

    node1.vm.provider :virtualbox do |virt|
      virt.customize ["modifyvm", :id, "--nicpromisc2", "allow-all"]
    end
  end

  config.vm.define "node2" do |node2|
    node2.vm.box = "ubuntu/trusty64"

    node2.vm.provision :shell, :path => "tools/vagrant_provision.sh"

    node2.vm.network "private_network", ip: "192.168.101.100",
      virtualbox__intnet: "pritunl1"
    node4.vm.network "private_network", ip: "192.168.102.101",
      virtualbox__intnet: "pritunl2"
    node2.vm.network :forwarded_port, guest: 9700, host: 9702,
      auto_correct: true
    node2.vm.network :forwarded_port, guest: 9902, host: 9902,
      auto_correct: true, protocol: "udp"

    node2.vm.provider :virtualbox do |virt|
      virt.customize ["modifyvm", :id, "--nicpromisc2", "allow-all"]
    end
  end

  config.vm.define "node3" do |node3|
    node3.vm.box = "ubuntu/trusty64"

    node3.vm.provision :shell, :path => "tools/vagrant_provision.sh"

    node3.vm.network "private_network", ip: "192.168.101.101",
      virtualbox__intnet: "pritunl1"
    node3.vm.network :forwarded_port, guest: 9700, host: 9703,
      auto_correct: true
    node3.vm.network :forwarded_port, guest: 9903, host: 9903,
      auto_correct: true, protocol: "udp"

    node3.vm.provider :virtualbox do |virt|
      virt.customize ["modifyvm", :id, "--nicpromisc2", "allow-all"]
    end
  end
end
